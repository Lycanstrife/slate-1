<%= render 'requests/list' %>
<%= render 'partials/teacher_menu' %>

  <%= form_tag teacher_path(current_teacher), method: :patch do %>
    <%= label :name, "Cohort" %>
    <%= select "cohort", "id", @cohort_options, {selected: params[:cohort] || (current_teacher.cohort || 0), :include_blank => "Select a cohort"} %>
    <%= submit_tag'Set as default' if Cohort.count > 0 %>
  <% end %>

  <%= select "cohort1", "id", @cohort_options, {selected: (Cohort.where(selected: true).first || 0), :include_blank => "Select a cohort"} %>
  <%= select "cohort2", "id", @cohort_options, {selected: (Cohort.where(selected: true).second || 0), :include_blank => "Select a cohort"} %>
  <%= link_to("Update Current Cohorts", "#" , class: 'btn btn-default') %>
  <div>
    <div id="cohort1_option"><%= "Cohort 1: #{Cohort.where(selected: true).first || "Not set"}" %></div>
    <div id="cohort2_option"><%= "Cohort 2: #{Cohort.where(selected: true).first || "Not set"}" %></div>
  </div>
  <br>
<%= link_to("Add Cohort", new_cohort_path , class: "btn btn-default") %>
<table class="table table-hover">
  <th>Name</th><th>Actions</th>
  <% @cohorts.each do |cohort| %>
    <tr>
      <td><%= cohort.name %></td>
      <td><%= link_to("Edit", edit_cohort_path(cohort), class: "btn btn-edit") %>
      <%= link_to("Delete", cohort_path(cohort), {method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"}) %></td>
    </tr>
  <% end %>
</table>
</div>

<!DOCTYPE html>
<html>
<head>
	<title>
		Slate
	</title>

	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag 'application' %>

</head>
<body>
<%= render 'partials/header' %>
<% flash do |key, value| %>
  <div class="alert <%= flash_class(key) %>"><button type="button" class="close" data-dismiss="alert">&times;</button><%= value %></div>
<% end %>

	<%= javascript_include_tag 'application' %>
	<%= yield %>
</body>
</html>

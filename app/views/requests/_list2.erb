<ul id='example'>
</ul>

<div class="waitingList" id="<%= cohort_name %>">
  <div class="curtain">
  </div>
  <div class="scroll">
    <ul>
      <% if requests.empty? %>
        <h1 class="NoRequests">No requests</h1>
      <% end %>
    </ul>
  </div>
</div>
<br />

<template id="request">
  <li id="{{ request_id }}">
    <div class="waiting">
      <h3>{{ student_name }}</h3>
      <div class="position">{{ position }}</div>
      <p class="time">{{ time }}</p>
      <p class="category">{{ category }}</p>
      <div class="gravatar" style="background-image: url('{{gravatar_url}}');"></div>
      <div class="codeSnippet prettyprint"><pre class="prettyprint">{{ description }}</pre></div>
      <div class="solveTab"></div>
    </div>
  </li>
</template>


<script>
  $(document).ready(function(){

    $('.waiting').on('click', '.close', function() {
      $(this).parent().parent().remove();
    })

  })

  $(function() {
    $('.waiting').click(function() {
      $(this).find('waitingOpen').slideToggle();
    });
  });

</script>

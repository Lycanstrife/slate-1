<div class="indent">
	<%= form_for Request.new do |f| %>

	<%= f.label :description %>
	<%= f.text_area :description, :value => "Paste code snippet here...", onfocus: "this.value='';"%>

	<%= f.label :category %>
	<div class="styled-select">
	<%= f.select :category, Category.all.map { |category| [category.name, category.id] }, :include_blank => " Select a category" %>
	</div>
	<div class="styled-submit">
		<%= f.submit %>
	</div>

	<% end %>
</div>
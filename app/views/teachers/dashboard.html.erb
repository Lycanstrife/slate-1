<%= render 'requests/list' %>
<%= render 'partials/teacher_menu' %>
  <h4>Welcome <%= @teacher.name %></h4>
  <div class="Stats">
    <div><%= "Today's average wait time: #{@stats[:todays_wait_time]} Minutes" %></div>
    <div><%= "Today's average queue length: #{@stats[:todays_queue]} Students" %></div>
    <br />
  </div>

  <%= select "cohort", "id", @cohort_options, {selected: params[:cohort] || (current_teacher.cohort || 0), :include_blank => "Select a cohort"},:onchange => 'changeCohort(this)' %>

  <% if !@cohort %>
    <h2>Please set a default cohort</h2>
  <% else %>
    <h2><%= @cohort.name %></h2>
  <% end %>

  <% if @students.count > 0 %>
    <table class="table table-hover">
      <th>Student Name</th><th>Number of Requests</th>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td>0</td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <br><h3>No students registered in this cohort</h3>
  <% end %>
</div>
